<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">パスワードの変更</h2>


        <%= form_with model: @user, url: new_user_session_path , local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :catchphrase, "キャッチフレーズ" %><br />
          <%= f.email_field :catchphrase, id:"user_catchphrase", autofocus: true, autocomplete: "catchphrase" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード再設定（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "current-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>
        #メールアドレスとキャチフレーズが合っていたら、パスワード設定できる。
        #合ってなかったらまた入力させる render edit       
      <% end %>
    </div>
  </div>
</div>