<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">
        こんにちは、
        <%= link_to "#{current_user.nickname}さん", user_path(current_user.id), class: :greeting__link%>
      </div>
      <%= form_with(url: search_products_path, local: true, method: :get, class: "search-form") do |form| %>
        <%= form.text_field :keyword, placeholder: "投稿を検索", class: "search-input" %>
        <%= form.submit "検索", class: "search-btn" %>
      <% end %>
    <% end %>

    <div class="card__wrapper">
      <%= render partial: 'product', collection: @products %>
    </div>
  </div>
</main>
